/* 商品 */
#goods-section {
		margin-top: 16rpx;
		background: #fff;
		padding-bottom: 1px;		
		}
		
		.g-header {
			display: flex;
			align-items: center;
			height: 84rpx;
			padding: 0 30rpx;
			position: relative;
             }
			 
		.logo {
			display: block;
			width: 50rpx;
			height: 50rpx;
			border-radius: 100px;
		}

		.name {
			font-size: 30rpx;
			color: #606266;
			margin-left: 24rpx;
		}
		
		
		
		
		.g-item {
			display: flex;
			margin: 20rpx 30rpx;
		        }
			.image {
				flex-shrink: 0;
				display: block;
				width: 140rpx;
				height: 140rpx;
				border-radius: 4rpx;
			}
		
			.right {
				flex: 1;
				padding-left: 24rpx;
				overflow: hidden;
				
			}
		
			.title clamp {
				font-size: 30rpx;
				color: #303133;
				
			}
		
			.spec {
				font-size: 26rpx;
				color:#909399;
				margin-left: 10rpx;
			}
		
			.price-box {
				display: flex;
				align-items: center;
				font-size: 32rpx;
				color: #303133;
				padding-top: 10rpx;
		           }
				.price {
					margin-bottom: 4rpx;
				}
				.number{
					font-size: 26rpx;
					color: #606266;
					margin-left: 20rpx;
				}
			
		
		

